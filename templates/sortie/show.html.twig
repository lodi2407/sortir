                    <label>Date limite d'inscription</label>
                    <input class="form-control" disabled value="{{ sortie.dateLimiteInscription|date('d-M-Y') }}">
                </div>
                <div class="form-group mb-3">
                    <label>Nombre de places</label>
                    <input class="form-control" disabled value="{{ sortie.nbInscriptionsMax }}">
                </div>
                <div class="form-group mb-3">
                    <label>Dur√©e</label>
                    <input class="form-control" disabled value="{{ sortie.duree|date('h:m:s') }}">
                </div>
                <div class="form-group mb-3">
                    <label>Descritpion et infos</label>
                    <textarea class="form-control" disabled>
                        {{ sortie.infosSortie }}
                    </textarea>
                </div>
            </div>
            <div class="col offset-sm-1">
                <div class="form-group mb-3">
                    <label>Campus</label>
                    <input class="form-control" disabled value="">
                </div>
                <div class="form-group mb-3">
                    <label>Lieu</label>
                    <input class="form-control" disabled value="">
                </div>
                <div class="form-group mb-3">
                    <label>Rue</label>
                    <input class="form-control" disabled value="">
                </div>
                <div class="form-group mb-3">
                    <label>Code postal</label>
                    <input class="form-control" disabled value="">
                </div>
                <div class="form-group mb-3">
                    <label>Latitude</label>
                    <input class="form-control" disabled value="">
                </div>
                <div class="form-group mb-3">
                    <label>Longitude</label>
                    <input class="form-control" disabled value="">
                </div>
            </div>
        </div>
        
