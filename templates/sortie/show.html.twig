{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    {% include('home/header.html.twig') %}

    <div class="container col-sm-9 mt-3 mb-3">
        <div class="row">
            <div class="col">
                <div class="form-group mb-3">
                    <h5><label>Nom de la sortie</label></h5>
                    <input class="form-control" disabled value="{{ sortie.nom }}">
                </div>
                <div class="form-group mb-3">
                    <label>Date et heure</label>
                    <input class="form-control" disabled value="{{ sortie.dateHeureDebut|date('d-M-Y') }}">
