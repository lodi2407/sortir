{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    {% include('home/header.html.twig') %}

    <div class="container mt-4">
        <div class="row">
            <div>
                <a href="{{ path('app_ville_list') }}">
                    <button class="btnApp">Gérer les villes</button>
                </a>
                <a href="{{ path('app_campus_list') }}">
                    <button class="btnApp">Gérer les campus</button>
                </a>
            </div>
        </div>
        <div class="row mt-4">
            <h5>Liste des utilisateurs actifs</h5>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Telephone</th>
                        <th>Campus</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    {% for p in participantsActifs %}
                    <tr>
                        <td>{{ p.nom }}</td>
                        <td>{{ p.prenom }}</td>
                        <td>{{ p.email }}</td>
                        <td>{{ p.telephone }}</td>
                        <td>{{ p.campus.nom }}</td>
                        <td>{{ p.roles[0] }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="row mt-4 mb-3">
            <h5>Liste des utilisateurs inactifs</h5>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Telephone</th>
                        <th>Campus</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    {% for p in participantsInactifs %}
                    <tr>
                        <td>{{ p.nom }}</td>
                        <td>{{ p.prenom }}</td>
                        <td>{{ p.email }}</td>
                        <td>{{ p.telephone }}</td>
                        <td>{{ p.campus.nom }}</td>
                        <td>{{ p.roles[0] }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
