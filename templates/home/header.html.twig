<div class="container-fluid">
    <div id="header" class="row">
        <div class="col-sm-6">
            <h1 class="p-2">
                <a class="text-decoration-none text-white" href="{{ path('app_home') }}">
                    <img class="border border-white" width="50" src="{{ asset('img/eni-logo.png') }}"> 
                    Sortir.com
                </a>
            </h1>
        </div>
        {% if app.user %}
        <div class="col-sm-6 d-flex justify-content-end">
            <nav class="navbar navbar-expand-lg">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <div class="navbar-nav">
                        {% if is_granted("ROLE_ADMIN") %}
                            <a class="nav-item nav-link" href="{{ path('app_ville_list') }}">Villes</a>
                            <a class="nav-item nav-link" href="{{ path('app_campus_list') }}">Campus</a>
                        {% endif %}
                        <a class="nav-item nav-link" href="{{ path('app_home') }}">Accueil</a>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Sorties
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-dark" href="{{ path('app_sortie_list') }}">Les sorties</a></li>
                                <li><a class="dropdown-item text-dark" href="{{ path('app_sortie_create', {id: app.user.id}) }}">Créer une sortie</a></li>
                            </ul>
                        </div>
                        <a class="nav-item nav-link" href="{{ path('app_profil_edit', {id : app.user.id}) }}">Mon profil</a>
                        <a class="nav-item nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                </div>
            </nav>
        </div>
        {% endif %}

        <div class="m-3 col-sm-3">
            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
        </div>
    </div>
</div>